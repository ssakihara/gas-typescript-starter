{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "typeRoots": ["./types", "node_modules/@types"],
        "module": "commonjs",
        "target": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": false
    },
    "exclude": ["node_modules"],
    "include": ["./src/*", "./types/*"]
}
